VOLUNTEER Page

import javax.swing.*;
import java.awt.*;

public class VolunteerForm {
    public static void main(String[] args) 
{
        JFrame frame = new JFrame("Volunteer");
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setSize(500, 400);
        frame.setLayout(new BorderLayout());

        JPanel mainPanel = new JPanel();
        mainPanel.setLayout(new BoxLayout(mainPanel, BoxLayout.Y_AXIS));
        mainPanel.setBorder(BorderFactory.createEmptyBorder(20, 20, 20, 20));

        JLabel title = new JLabel("Volunteer");
        title.setFont(new Font("Arial", Font.BOLD, 24));
        title.setAlignmentX(Component.LEFT_ALIGNMENT);
        mainPanel.add(title);

        JLabel description = new JLabel("Fill in the form below to volunteer with us!");
        description.setFont(new Font("Arial", Font.PLAIN, 14));
        description.setAlignmentX(Component.LEFT_ALIGNMENT);
        description.setBorder(BorderFactory.createEmptyBorder(10, 0, 20, 0));
        mainPanel.add(description);

        JPanel formPanel = new JPanel();
        formPanel.setLayout(new GridLayout(0, 1, 5, 10));
        formPanel.setAlignmentX(Component.LEFT_ALIGNMENT);

        JLabel nameLabel = new JLabel("Name:");
        JTextField nameField = new JTextField(20);
        nameField.setBorder(BorderFactory.createTitledBorder("Full name*"));
        formPanel.add(nameLabel);
        formPanel.add(nameField);

        JLabel emailLabel = new JLabel("E-Mail:");
        JTextField emailField = new JTextField(20);
        emailField.setBorder(BorderFactory.createTitledBorder("Email Address*"));
        formPanel.add(emailLabel);
        formPanel.add(emailField);


        JLabel phoneLabel = new JLabel("Cellphone Number:");
        JTextField phoneField = new JTextField(20);
        phoneField.setBorder(BorderFactory.createTitledBorder("Phone Number*"));
        formPanel.add(phoneLabel);
        formPanel.add(phoneField);

   
        JLabel dateLabel = new JLabel("Select a date for an upcoming event");
        formPanel.add(dateLabel);
        // Add some space before the button
        formPanel.add(Box.createVerticalStrut(20));

        JButton submitButton = new JButton("Submit");
        submitButton.setAlignmentX(Component.LEFT_ALIGNMENT);
        submitButton.setBackground(new Color(0, 120, 215)); // Blue color
        submitButton.setForeground(Color.WHITE);
        submitButton.setPreferredSize(new Dimension(100, 30));

        mainPanel.add(formPanel);
        mainPanel.add(Box.createVerticalStrut(10));
        mainPanel.add(submitButton);

        frame.add(mainPanel, BorderLayout.CENTER);
        frame.setVisible(true);
    }
}




OUR EVENTS page


import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class VolunteerForm extends JFrame {
    public VolunteerForm() {
     
        setTitle("Volunteer");
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setSize(500, 450);
        setLocationRelativeTo(null);
        
        JPanel mainPanel = new JPanel();
        mainPanel.setLayout(new BoxLayout(mainPanel, BoxLayout.Y_AXIS));
        mainPanel.setBorder(BorderFactory.createEmptyBorder(20, 30, 20, 30));
        mainPanel.setBackground(new Color(240, 240, 240)); // Light gray background

        JLabel titleLabel = new JLabel("Volunteer");
        titleLabel.setFont(new Font("Arial", Font.BOLD, 24));
        titleLabel.setAlignmentX(Component.LEFT_ALIGNMENT);
        titleLabel.setForeground(new Color(51, 51, 51)); // Dark gray text
        mainPanel.add(titleLabel);

        JLabel descLabel = new JLabel("Fill in the form below to volunteer with us!");
        descLabel.setFont(new Font("Arial", Font.PLAIN, 14));
        descLabel.setAlignmentX(Component.LEFT_ALIGNMENT);
        descLabel.setForeground(new Color(102, 102, 102)); // Medium gray text
        descLabel.setBorder(BorderFactory.createEmptyBorder(5, 0, 20, 0));
        mainPanel.add(descLabel);

        JPanel formPanel = new JPanel();
        formPanel.setLayout(new BoxLayout(formPanel, BoxLayout.Y_AXIS));
        formPanel.setAlignmentX(Component.LEFT_ALIGNMENT);
        formPanel.setBackground(new Color(240, 240, 240));

        JLabel nameLabel = new JLabel("Name:");
        nameLabel.setAlignmentX(Component.LEFT_ALIGNMENT);
        nameLabel.setFont(new Font("Arial", Font.PLAIN, 14));
        nameLabel.setForeground(new Color(51, 51, 51));
        formPanel.add(nameLabel);

        JTextField nameField = new JTextField();
        nameField.setAlignmentX(Component.LEFT_ALIGNMENT);
        nameField.setMaximumSize(new Dimension(400, 30));
        nameField.setBorder(BorderFactory.createCompoundBorder(
            BorderFactory.createLineBorder(new Color(200, 200, 200)), // Light gray border
            BorderFactory.createEmptyBorder(5, 10, 5, 10)
        ));
        formPanel.add(nameField);

        JLabel nameSubtext = new JLabel("Full name*");
        nameSubtext.setAlignmentX(Component.LEFT_ALIGNMENT);
        nameSubtext.setFont(new Font("Arial", Font.ITALIC, 12));
        nameSubtext.setForeground(new Color(150, 150, 150)); // Light gray
        nameSubtext.setBorder(BorderFactory.createEmptyBorder(0, 0, 15, 0));
        formPanel.add(nameSubtext);

 
        JLabel emailLabel = new JLabel("E-Mail:");
        emailLabel.setAlignmentX(Component.LEFT_ALIGNMENT);
        emailLabel.setFont(new Font("Arial", Font.PLAIN, 14));
        emailLabel.setForeground(new Color(51, 51, 51));
        formPanel.add(emailLabel);

        JTextField emailField = new JTextField();
        emailField.setAlignmentX(Component.LEFT_ALIGNMENT);
        emailField.setMaximumSize(new Dimension(400, 30));
        emailField.setBorder(BorderFactory.createCompoundBorder(
            BorderFactory.createLineBorder(new Color(200, 200, 200)),
            BorderFactory.createEmptyBorder(5, 10, 5, 10)
        ));
        formPanel.add(emailField);

        JLabel emailSubtext = new JLabel("Email Address*");
        emailSubtext.setAlignmentX(Component.LEFT_ALIGNMENT);
        emailSubtext.setFont(new Font("Arial", Font.ITALIC, 12));
        emailSubtext.setForeground(new Color(150, 150, 150));
        emailSubtext.setBorder(BorderFactory.createEmptyBorder(0, 0, 15, 0));
        formPanel.add(emailSubtext);

        JLabel phoneLabel = new JLabel("Cellphone Number:");
        phoneLabel.setAlignmentX(Component.LEFT_ALIGNMENT);
        phoneLabel.setFont(new Font("Arial", Font.PLAIN, 14));
        phoneLabel.setForeground(new Color(51, 51, 51));
        formPanel.add(phoneLabel);

        JTextField phoneField = new JTextField();
        phoneField.setAlignmentX(Component.LEFT_ALIGNMENT);
        phoneField.setMaximumSize(new Dimension(400, 30));
        phoneField.setBorder(BorderFactory.createCompoundBorder(
            BorderFactory.createLineBorder(new Color(200, 200, 200)),
            BorderFactory.createEmptyBorder(5, 10, 5, 10)
        ));
        formPanel.add(phoneField);

        JLabel phoneSubtext = new JLabel("Phone Number*");
        phoneSubtext.setAlignmentX(Component.LEFT_ALIGNMENT);
        phoneSubtext.setFont(new Font("Arial", Font.ITALIC, 12));
        phoneSubtext.setForeground(new Color(150, 150, 150));
        phoneSubtext.setBorder(BorderFactory.createEmptyBorder(0, 0, 15, 0));
        formPanel.add(phoneSubtext);

        JLabel dateLabel = new JLabel("Select a date for an upcoming event");
        dateLabel.setAlignmentX(Component.LEFT_ALIGNMENT);
        dateLabel.setFont(new Font("Arial", Font.PLAIN, 14));
        dateLabel.setForeground(new Color(51, 51, 51));
        dateLabel.setBorder(BorderFactory.createEmptyBorder(10, 0, 20, 0));
        formPanel.add(dateLabel);


        JButton submitButton = new JButton("Submit");
        submitButton.setAlignmentX(Component.LEFT_ALIGNMENT);
        submitButton.setBackground(new Color(0, 120, 214)); // Blue button
        submitButton.setForeground(Color.WHITE);
        submitButton.setFont(new Font("Arial", Font.BOLD, 14));
        submitButton.setBorder(BorderFactory.createEmptyBorder(10, 20, 10, 20));
        submitButton.setFocusPainted(false);
        submitButton.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                JOptionPane.showMessageDialog(VolunteerForm.this, "Thank you for volunteering!");
            }
        });

        mainPanel.add(formPanel);
        mainPanel.add(submitButton);

        add(mainPanel);
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(() -> {
            VolunteerForm form = new VolunteerForm();
            form.setVisible(true);
        });
    }
}
